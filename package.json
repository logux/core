{
  "name": "@logux/core",
  "version": "0.9.0",
  "description": "Logux core components",
  "keywords": [
    "logux",
    "core",
    "connection",
    "websocket",
    "crdt",
    "event sourcing",
    "distributed systems"
  ],
  "scripts": {
    "test:coverage": "c8 pnpm bnt",
    "test:lint": "eslint .",
    "test:types": "check-dts",
    "test": "pnpm run /^test:/"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.org/",
  "repository": "logux/core",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "dependencies": {
    "nanoevents": "^9.1.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^56.1.0",
    "@types/ws": "^8.18.1",
    "actions-up": "^1.1.1",
    "better-node-test": "^0.7.2",
    "c8": "^10.1.3",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.2.2",
    "eslint": "^9.34.0",
    "nanodelay": "^2.0.2",
    "nanospy": "^1.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "ws": "^8.18.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*",
      "test/*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  }
}
